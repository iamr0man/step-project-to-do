html
    include ../partials/head

    body(class="bg-info h-100")
        div(class="container w-100 pt-3")
            div(class="form-group w-90")
                input(type="text" class="form-control" placeholder="Введите заголовок..." id="inputListTitle" value=`${title}`)
            div(class="form-group w-90 d-flex justify-content-between align-items-center flex-wrap" id="tasksContainer")
                each val, index in taskList
                    textarea(class="form-control w-75 mb-1 mr-1 task" style="height: 100px;" placeholder="Введите задачу..." data-id=`${index}`) #{val['task']}
                    if val['isDone']
                        input(type="checkbox" class="ml-1 is-done" id=`${index}` checked=true)
                        span(class="mr-5") Done
                    else
                        input(type="checkbox" class="ml-1 is-done" id=`${index}` checked=false)
                        span(class="mr-1") Done
            div(class="text-center")
                button(type="button" class="btn btn-dark mr-3" id="add-task-btn") Add task
                button(type="button" class="btn btn-dark mr-3" id="save-button") Edit
                button(type="button" class="btn btn-dark" id="delete-button") Delete
        include ../partials/footerDetailList